[
  {
    "id": "cfl.personDashboard.relationships",
    "instanceOf": "coreapps.template.dashboardWidget",
    "description": "This app adds a relationship widget into the person dashboard",
    "extensions": [
      {
        "id": "cfl.personDashboard.relationships.clinicianDashboardFirstColumn",
        "appId": "cfl.personDashboard.relationships",
        "order": 1,
        "extensionPointId": "personDashboard.firstColumnFragments",
        "extensionParams": {
          "provider": "cfl",
          "fragment": "dashboardwidgets/personFamilyWidget",
          "fragmentConfig": {
            "personPage": "/coreapps/clinicianfacing/patient.page?patientId={personUuid}",
            "patientPage": "/coreapps/clinicianfacing/patient.page?patientId={personUuid}",
            "label": "cfl.dashboard.relationship.label",
            "icon": "icon-group",
            "maxRecords": "15"
          }
        }
      }
    ]
  }
]
