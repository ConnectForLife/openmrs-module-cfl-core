[
  {
    "id":"cfl.registerPatient",
    "instanceOf":"registrationapp.registerPatient",
    "label":"Register Patient vol2",
    "description":"Create a new Patient Record",
    "extensions":[
      {
        "id":"cfl.registrationapp.registerPatient.homepageLink",
        "extensionPointId":"org.openmrs.referenceapplication.homepageLink",
        "type":"link",
        "label":"CFL Register Patient",
        "url":"registrationapp/registerPatient.page?appId=cfl.registerPatient",
        "icon":"icon-user",
        "order":1,
        "requiredPrivilege":"App: registrationapp.registerPatient"
      },
      {
        "id": "cfl.registrationapp.summary.editPatientLink",
        "extensionPointId": "patientDashboard.overallActions",
        "type": "link",
        "label": "cfl.editPatientInfo.label",
        "url": "registrationapp/registrationSummary.page?patientId={{patient.uuid}}&appId=cfl.registerPatient",
        "icon": "icon-pencil",
        "order": 2,
        "requiredPrivilege": "App: registrationapp.registerPatient"
      },
      {
        "id": "cfl.registrationSummary.includeFragments",
        "extensionPointId": "patientDashboard.includeFragments",
        "extensionParams": {
          "provider": "cfl",
          "fragment": "includeFragments/deletePatientAction"
        }
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink1",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "type": "link",
        "order": 1,
        "label": "visits.visits",
        "url": "owa/visits/index.html#/visits/manage/{{patient.uuid}}",
        "icon": "icon-calendar"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink2",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "type": "link",
        "order": 2,
        "label": "messages.title",
        "url": "owa/messages/index.html#/messages/{{patient.patientId}}&patientUuid={{patient.uuid}}",
        "icon": "icon-comment"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink3",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "type": "link",
        "order": 3,
        "label": "cfl.patientDashboard.label",
        "url": "coreapps/clinicianfacing/patient.page?patientId={{patient.uuid}}",
        "icon": "icon-dashboard"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink4",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "type": "link",
        "order": 4,
        "label": "coreapps.conditionui.conditions",
        "icon": "icon-diagnosis",
        "url": "coreapps/conditionlist/manageConditions.page?patientId={{patient.uuid}}"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink5",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "order": 5,
        "type": "link",
        "label": "allergyui.allergies",
        "icon": "icon-medical",
        "url": "allergyui/allergies.page?patientId={{patient.uuid}}"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink6",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "order": 6,
        "type": "Link",
        "label": "coreapps.markPatientDead.label",
        "icon": "icon-plus-sign-alt",
        "url": "coreapps/markPatientDead.page?patientId={{patient.uuid}}"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink7",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "order": 7,
        "type": "script",
        "label": "coreapps.task.deletePatient.label",
        "script": "delPatient.showDeletePatientCreationDialog(&#x27;{{patient.uuid}}&#x27;)",
        "icon": "icon-remove"
      },
      {
        "id": "cfl.registrationSummaryOverallActionsLink5",
        "extensionPointId": "registrationSummary.overallActions",
        "appId": "cfl.registerPatient",
        "order": 8,
        "type": "link",
        "label": "callflows.initcall.button",
        "icon":"icon-phone-sign",
        "url": "/ws/callflows/person/{{patient.uuid}}/out/voxeo-mobile/flows/MainFlow.ccxml?actorType=Patient"
      },
      {
        "id": "cfl.registrationapp.summary.patientIds",
        "appId": "cfl.registerPatient",
        "extensionPointId": "registrationSummary.contentFragments",
        "extensionParams": {
          "provider": "registrationapp",
          "fragment": "summary/section",
          "fragmentConfig": {
            "sectionId": "patientIds",
            "patientId": "{{patientId}}"
          }
        },
        "order": 1
      },
      {
        "id": "cfl.registrationapp.summary.accesslocation-info",
        "appId": "cfl.registerPatient",
        "extensionPointId": "registrationSummary.secondColumnContentFragments",
        "extensionParams": {
          "provider": "registrationapp",
          "fragment": "summary/section",
          "fragmentConfig": {
            "sectionId": "accesslocation-info",
            "patientId": "{{patientId}}"
          }
        },
        "order": 2
      }
    ],
    "config":{
      "afterCreatedUrl":"/coreapps/clinicianfacing/patient.page?patientId={{patientId}}",
      "allowUnknownPatients":false,
      "sections":[
        {
          "id":"contactInfo",
          "label":"registrationapp.patient.contactInfo.label",
          "questions":[
            {
              "legend": "Person.address",
              "fields": [
                {
                  "type": "personAddress",
                  "label": "registrationapp.patient.address.question",
                  "widget": {
                    "providerName": "uicommons",
                    "fragmentId": "field/personAddress"
                  }
                }
              ]
            },
            {
              "legend":"Language",
              "id":"languageLabel",
              "fields":[
                {
                  "type":"personAttribute",
                  "label":"Select language",
                  "formFieldName":"personLanguage",
                  "uuid":"ff34db58-c1f4-475b-8bac-30f26e251333",
                  "widget":{
                    "providerName":"uicommons",
                    "fragmentId":"field/dropDown",
                    "config":{
                      "options":[
                        {
                          "label":"English",
                          "value":"English"
                        },
                        {
                          "label":"Marathi",
                          "value":"Marathi"
                        },
                        {
                          "label":"Hindi",
                          "value":"English"
                        }
                      ],
                      "hideEmptyLabel":true,
                      "expanded":false
                    }
                  },
                  "cssClasses":[
                    "required"
                  ]
                }
              ]
            },
            {
              "legend":"registrationapp.patient.phone.label",
              "id":"phoneNumberLabel",
              "fields":[
                {
                  "type":"personAttribute",
                  "label":"registrationapp.patient.phone.question",
                  "formFieldName":"phoneNumber",
                  "uuid":"14d4f066-15f5-102d-96e4-000c29c2a5d7",
                  "widget":{
                    "providerName":"uicommons",
                    "fragmentId":"field/text",
                    "config":{
                      "regex":"^[0-9]{10,13}$"
                    }
                  },
                  "cssClasses":[
                    "phone",
                    "required",
                    "regex"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id":"accesslocation-info",
          "label":"Access Location",
          "questions":[
            {
              "legend":"Patient Location ",
              "id":"patientLocationLabel",
              "fields":[
                {
                  "type":"personAttribute",
                  "label":"Select Location",
                  "formFieldName":"locationId",
                  "uuid":"bfdf8ed0-87e3-437e-897d-81434393a233",
                  "widget":{
                    "providerName":"locationbasedaccess",
                    "fragmentId":"field/locations"
                  },
                  "cssClasses":[
                    "required"
                  ]
                }
              ]
            }
          ]
        },
        {
          "id":"patientIds",
          "label":"Patient ID's",
          "questions":[
            {
              "legend":"Aadhar Number",
              "id":"AadharNumberLabel",
              "fields":[
                {
                  "type":"patientIdentifier",
                  "label":"Aadhar Number",
                  "formFieldName":"Aadhar Number",
                  "uuid":"4aa897a3-0b05-4ec9-8d70-a93a336be548",
                  "widget":{
                    "providerName":"uicommons",
                    "fragmentId":"field/text"
                  }
                }
              ]
            },
            {
              "legend":"ART Number",
              "id":"ARTNumberLabel",
              "fields":[
                {
                  "type":"patientIdentifier",
                  "label":"ART Number",
                  "formFieldName":"ART Number",
                  "uuid":"2a4c3f45-405b-41ab-b6cd-f3c5ad2f5007",
                  "widget":{
                    "providerName":"uicommons",
                    "fragmentId":"field/text"
                  }
                }
              ]
            }
          ]
        },
        {
          "id": "relationships-info",
          "label": "registrationapp.person.relationship",
          "questions": [
            {
              "legend": "registrationapp.person.relationship.label",
              "header": "registrationapp.person.relationship.question",
              "fields": [
                {
                  "type": "personRelationships",
                  "widget": {
                    "providerName": "registrationapp",
                    "fragmentId": "field/personRelationship"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  }
]
